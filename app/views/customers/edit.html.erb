<div>
  <%= form_with model: @customer, url: customers_update_path, method: :patch do |f| %>
    <div>
      <label for="customer_name">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"customer_name", placeholder:"名前" %>
    </div>
    <div>
      <label for="customer_image">Image</label><br>
      <%= f.file_field :profile_image, id:"customer_profile_image", placeholder:"プロフィール画像", accept: "image/*" %>
    </div>
    <div>
      <%= f.submit "Update customer", class:"btn btn-secondary" %>
    </div>
  <% end %>
</div>